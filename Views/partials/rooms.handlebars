<row class="row main mt-5">
    <div class="col-3">
        <row>
            <ul class="rooms nav flex-column" id="rooms-list">
                <li class="room nav-item" id="{{room.id}}">
                    <h2>Active rooms</h2>
                </li>
                {{#each rooms as |room| }}
                <li class="room nav-item" id="{{room.id}}">
                    <a class="nav-link" href="/chatroom/{{room.id}}">{{room.name}}</a>
                </li>
                {{/each}}
            </ul>
        </row>
        <row class="pt-4">
            <form id="add-room-form" class="form-inline my-2 my-lg-0">
                <input id="room-name" class="form-control" placeholder="Room name">
                <button id="addroom" class="btn btn-outline-success my-2 my-sm-0" type="submit">Add room</button>

            </form>
        </row>
    </div>
    <div class="col-7 mx-1 room">
        <row class="sport-title">
            <h3>{{sport.name}}</h3>
        </row>
        </row>
        <row class="chatbox">
            {{> chatroom }}
        </row>
    </div>
</row>
